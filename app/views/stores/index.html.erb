<h2>A&M Stores</h2>

<table class="striped">
  <tr>
    <th>Name</th>
    <th>Address</th>
	<th>ZIP</th>
    <th>phone</th>
    <th></th>
  </tr>

<% @active_stores.each do |store| %>
  <tr>
    <td><%= link_to store.name, store_path(store) %></td>
    <td><%= "#{store.street}, #{store.city}, #{store.state}"  %></td>
    <td><%= store.zip %></td>
    <td><%= store.phone %></td>
    <td><%= link_to 'Edit', edit_store_path(store), :class=> "waves-effect waves-light btn blue" %></td>
  </tr>
<% end %>
</table>
<br />
<!-- Add the pagination using will_paginate gem -->
<span class="paginate">
<%= will_paginate @active_stores, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

<br />

<a class="button"><%= link_to "New store", new_assignment_path, :class=> "waves-effect waves-light btn dark-grey" %></a>

