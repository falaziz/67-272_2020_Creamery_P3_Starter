<%# # Form_for it takes a model object, looks at its attributes, and    
# uses those attributes to pre-populate the form's fields. %>
  <%= simple_form_for(@assignment) do |f| %>
    <%= f.error_notification %>
    <div class="row">
      <div class="form-inputs">
        <%= f.input :employee_id, collection: Employee.active.alphabetical.to_a, include_blank: true %>
        <%= f.input :store_id, collection: Store.active.alphabetical.to_a, include_blank: true %>
        <%= f.input :start_date, label_html: { class: 'active' }%>
        <%= f.input :end_date %>
      </div>
    </div>
    <div class="row">
      <div class="form-actions col s8">
        <%= f.button :submit %>
      </div>
    </div>
  <% end %>